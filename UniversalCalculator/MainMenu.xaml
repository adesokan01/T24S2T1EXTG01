<Page
    x:Class="Calculator.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Grid>
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock Text="Universal Calculator" FontSize="28" FontWeight="Bold" Margin="0,10,0,20" />
			<Button Content="Math Calculator" HorizontalAlignment="Center" Width="200" Margin="0,10" Click="MathCalc_Click" />
			<Button Content="Mortgage Calculator" HorizontalAlignment="Center" Width="200" Margin="0,10" Click="MortgageCalc_Click" />
			<Button Content="Currency Calculator" HorizontalAlignment="Center" Width="200" Margin="0,10" Click="CurrencyCalc_Click" />
			<Button Content="Trip Calculator" HorizontalAlignment="Center" Width="200" Margin="0,10" Click="TripCalc_Click" />
			<Button Content="Exit" Width="200" HorizontalAlignment="Center" Margin="0,10" Click="Exit_Click" />
		</StackPanel>
		<Image Source="Assets/abacus.png" HorizontalAlignment="Right" VerticalAlignment="Top" Width="100" Margin="10 10 10 10"  Height="100" />
	
	</Grid>
</Page>
